{% extends '::base.html.twig' %}

{% block title %}Usage for: {{ inspector_class_context.className }}{% endblock %}

{% block content %}
  {% include 'espendInspectorFrontendBundle:Default/include:class_header.html.twig' only %}

  <div class="row">

    <div class="col-md-3">
      {% include '@espendInspectorFrontend/Default/include/class_menu.html.twig' %}
    </div>

    <div class="col-md-9">

      {% if instances|length > 0 %}
        <h2><a href="{{ view_path('instance:' ~ inspector_class_context.className) }}">Instances</a></h2>
        {% for instance in instances %}

          <div class="panel panel-default panel-code-context">
            <div class="panel-heading">
              Instance
              {% include 'espendInspectorFrontendBundle:Default/include:project_link.html.twig' with {'file': instance.file, 'line': instance.line} only %}
            </div>
            <div class="panel-body">
              {% include 'espendInspectorCoreBundle:Default/include:code_context.html.twig' with {'instance': instance} only %}
            </div>
          </div>

        {% endfor %}
      {% endif %}

      {% if methods|length > 0 %}
        <h2><a href="{{ view_path('method:' ~ inspector_class_context.className) }}">Methods</a></h2>
        {% for method in methods %}

          <div class="panel panel-default panel-code-context">
            <div class="panel-heading">
              <a href="{{ view_path(class.class ~ ':' ~ method.method) }}">{{ method.method }}</a>
              <span class="text-muted">{{ class.class }}</span>
              {% include 'espendInspectorFrontendBundle:Default/include:project_link.html.twig' with {'file': method.file, 'line': method.line} only %}
            </div>
            <div class="panel-body">
              {% include 'espendInspectorCoreBundle:Default/include:code_context.html.twig' with {'instance': method} %}
            </div>
          </div>

        {% endfor %}
      {% endif %}

    </div>

  </div>
{% endblock %}