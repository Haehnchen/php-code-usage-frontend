{% extends '::base.html.twig' %}

{% set result_items %}
      {% for result in results %}

        <div class="r">
          <h3><a href="{{ view_path(result.class) }}">{{ result.class }}</a></h3>

          <p>

            {{ result.lastFoundAt|date('Y-m-d') }}
            {% if result.docComment|length > 0 %}
              {{ result.docComment|truncate(100) }}
            {% endif %}

          </p>

          {% if result.project %}
            <ul>
              <li>{{ result.project.name }} - {{ result.project.version }}</li>
            </ul>
          {% endif %}

        </div>

      {% endfor %}
{% endset %}

{% block body %}
  <div class="container margin-top30">
    <h2>Search result '{{ search_name }}'</h2>

    <div class="search well well-white">

      <div class="row">
        <div class="col-md-6">
          {{ result_items }}
        </div>
      </div>

    </div>

  </div>
{% endblock %}