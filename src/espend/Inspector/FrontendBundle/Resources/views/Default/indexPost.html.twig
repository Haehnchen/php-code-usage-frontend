{% extends '::base.html.twig' %}

{% block body %}
  <div class="container margin-top30">
    <h2>Search result '{{ search_name }}'</h2>
    <div class="search well well-white">

      {% for result in results %}

        <div class="r">
          <h3><a href="{{ view_path(result.class) }}">{{ result.class }}</a></h3>
          <p>

            {% if result.file %}
              {{ result.file.name }}
            {% endif %}

          </p>
        </div>

      {% endfor %}
    </div>
  </div>
{% endblock %}