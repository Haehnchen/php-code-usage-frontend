{% extends '::base.html.twig' %}

{% block title %}Usage for: {{ inspector_class_context.className }}{% endblock %}

{% block content %}
  {% include 'espendInspectorFrontendBundle:Default/include:class_header.html.twig' only %}

  <div class="row">

    <div class="col-md-3">
      {% include '@espendInspectorFrontend/Default/include/class_menu.html.twig' %}
    </div>

    <div class="col-md-9">

      {% if dynamics|length > 0 %}
        <h2>{{ dynamic_name }}</h2>
        {% for dynamic in dynamics %}


          <div class="panel panel-default panel-code-context">

            <div class="panel-heading">
              <span class="text-muted">{{ dynamic.class.class }}</span>

              {% include 'espendInspectorFrontendBundle:Default/include:project_link.html.twig' with {'file': dynamic.class.file, 'line': dynamic.line} only %}

            </div>

            <div class="panel-body">
              {% include 'espendInspectorCoreBundle:Default/include:code_context.html.twig' with {'instance': dynamic} %}
            </div>
          </div>

        {% endfor %}
      {% endif %}

      <div class="navigation text-center">
        {{ knp_pagination_render(dynamics) }}
      </div>

    </div>

  </div>
{% endblock %}